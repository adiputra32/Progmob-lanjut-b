<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".DetailHistoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="@drawable/bg_home_gradient"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ly_detail_motor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_ic_up"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="20dp">

            <ImageView
                android:id="@+id/img_motor"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/motor1"
                android:layout_marginRight="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_harga_motor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:text="Rp 170.000/day"
                    android:maxLines="1"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/roboto_regular"
                    tools:targetApi="jelly_bean" />

                <TextView
                    android:id="@+id/tv_nama_motor"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textColor="#3e3c3c"
                    android:textStyle="bold"
                    android:text="Honda New CBR"
                    android:textSize="15dp"
                    android:maxLines="1"
                    android:fontFamily="@font/roboto_regular"
                    tools:targetApi="jelly_bean" />

                <TextView
                    android:id="@+id/tv_jenis_motor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:text="Sport"
                    android:textSize="13dp"
                    android:maxLines="1"
                    android:fontFamily="@font/roboto_regular"
                    tools:targetApi="jelly_bean" />

                <TextView
                    android:id="@+id/tv_pemilik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textSize="13dp"
                    android:text="Adi Putra Motor"
                    android:maxLines="1"
                    android:fontFamily="@font/roboto_regular"
                    tools:targetApi="jelly_bean" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_payment_stts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_ic"
            android:layout_marginTop="15dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp">

            <TextView
                android:id="@+id/tv_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:text="Payment Status"
                android:textStyle="bold"
                android:textColor="#000000"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp">

                <TextView
                    android:id="@+id/tv_payment_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waiting for payment"
                    android:textStyle="italic"
                    android:textColor="#cf3e3e"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_payment_limit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="1 day left"
                    android:textStyle="italic"
                    android:textColor="#cf3e3e"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="12sp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_payment_proof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_ic"
            android:layout_marginTop="15dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:text="Payment Proof"
                android:textStyle="bold"
                android:textColor="#000000"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:layout_marginTop="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp">

                <TextView
                    android:id="@+id/tv_payment_proof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:maxWidth="250dp"
                    android:text="No Payment Proof"
                    android:textStyle="italic"
                    android:textColor="#cf3e3e"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="12sp"/>

                <Button
                    android:id="@+id/btn_send_pp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_alignParentRight="true"
                    android:textAllCaps="false"
                    android:text="Upload"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/roboto_regular"
                    android:background="@drawable/btn_gradient"
                    android:visibility="visible"
                    android:elevation="1dp"
                    android:onClick="uploadPP"
                    tools:targetApi="lollipop"/>

                <Button
                    android:id="@+id/btn_show_pp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_alignParentRight="true"
                    android:textAllCaps="false"
                    android:text="Show"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/roboto_regular"
                    android:background="@color/colorAccent"
                    android:visibility="gone"
                    android:elevation="1dp"
                    tools:targetApi="lollipop"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_ic"
            android:layout_marginTop="15dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:text="Rent Status"
                android:textStyle="bold"
                android:textColor="#000000"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waiting for Payment"
                    android:textStyle="normal"
                    android:textColor="#cf3e3e"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="24 hours left"
                    android:textStyle="normal"
                    android:textColor="#cf3e3e"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="12sp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_ic"
            android:layout_marginTop="15dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:text="Pickup Location"
                android:textStyle="bold"
                android:textColor="#000000"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tv_lokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:maxLines="3"
                android:textStyle="normal"
                android:textColor="#000000"
                android:fontFamily="@font/roboto_regular"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_ic"
            android:layout_marginTop="15dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:text="Rent Details"
                android:textStyle="bold"
                android:textColor="#000000"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:layout_marginTop="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="22dp">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textColor="#2B2B2B"
                    android:fontFamily="@font/roboto_regular"/>

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="-"
                    android:textColor="#2B2B2B"
                    android:fontFamily="@font/roboto_regular"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="22dp">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Days for Rent"
                    android:textColor="#2B2B2B"
                    android:fontFamily="@font/roboto_regular"/>

                <TextView
                    android:id="@+id/tv_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="1 Day"
                    android:textColor="#2B2B2B"
                    android:fontFamily="@font/roboto_regular"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="22dp">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textColor="#2B2B2B"
                    android:fontFamily="@font/roboto_regular"/>

                <TextView
                    android:id="@+id/tv_harga_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Rp 170.000"
                    android:textColor="#2B2B2B"
                    android:fontFamily="@font/roboto_regular"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="22dp">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Fines for Late Return"
                    android:textColor="#2B2B2B"
                    android:fontFamily="@font/roboto_regular"/>

                <TextView
                    android:id="@+id/tv_denda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Rp 20.000/Hour"
                    android:textColor="#2B2B2B"
                    android:fontFamily="@font/roboto_regular"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="22dp">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Insurance"
                    android:textColor="#2B2B2B"
                    android:fontFamily="@font/roboto_regular"/>

                <TextView
                    android:id="@+id/tv_asuransi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Rp 10.000"
                    android:textColor="#2B2B2B"
                    android:fontFamily="@font/roboto_regular"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:layout_marginTop="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="22dp">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Total price"
                    android:textStyle="bold"
                    android:textColor="#2B2B2B"
                    android:fontFamily="@font/roboto_regular"/>

                <TextView
                    android:id="@+id/tv_harga_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Rp 180.000"
                    android:textStyle="bold"
                    android:textColor="#2B2B2B"
                    android:fontFamily="@font/roboto_regular"/>

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_ic_down"
            android:layout_marginTop="15dp"
            android:paddingBottom="80dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp">

            <Button
                android:id="@+id/btn_chat"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_toLeftOf="@id/btn_cancel"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginRight="15dp"
                android:textAllCaps="false"
                android:text="Chat Owner"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:fontFamily="@font/roboto_regular"
                android:background="@drawable/btn_gradient"
                android:elevation="1dp"
                android:onClick="ChatOwner"
                tools:targetApi="lollipop"/>

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_alignParentRight="true"
                android:textAllCaps="false"
                android:text="Cancel"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:fontFamily="@font/roboto_regular"
                android:background="@drawable/btn_gradient_red"
                android:elevation="1dp"
                android:onClick="cancelOrder"
                tools:targetApi="lollipop"
                android:visibility="visible"/>

            <Button
                android:id="@+id/btn_add_days"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_alignParentRight="true"
                android:textAllCaps="false"
                android:text="Add Days Rent"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:fontFamily="@font/roboto_regular"
                android:background="@drawable/btn_gradient_green"
                android:elevation="1dp"
                tools:targetApi="lollipop"
                android:visibility="gone"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>