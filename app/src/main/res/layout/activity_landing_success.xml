<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingSuccessActivity">

    <ImageView
        android:id="@+id/check"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ic_check_circle_black_24dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/ty"
        android:layout_below="@id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="THANK YOU!"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textSize="26sp"
        android:fontFamily="@font/roboto_regular"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/ty2"
        android:layout_below="@id/ty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="15dp"
        android:text="Please make payments before the next 24 hours\nChat the owner to get an account number if you choose to pay via bank"
        android:textStyle="normal"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:fontFamily="@font/roboto_regular"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_go_to_history"
        android:layout_below="@id/ty2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Go To History"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_regular"
        android:layout_centerHorizontal="true"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

</RelativeLayout>