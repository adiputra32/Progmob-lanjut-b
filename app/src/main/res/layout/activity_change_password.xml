<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".ChangePasswordActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:text="Old Password"
        android:fontFamily="@font/roboto_regular"
        tools:targetApi="jelly_bean"/>

    <com.example.adiputra.sewainbali.EditTextWithClear
        android:id="@+id/et_old_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Old Password"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:padding="15dp"
        android:fontFamily="@font/roboto_regular"
        android:inputType="textPassword"
        android:maxLines="1"
        android:background="@drawable/et_login_custom"
        android:textSize="15sp"
        tools:targetApi="jelly_bean" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:text="New Password"
        android:fontFamily="@font/roboto_regular"
        tools:targetApi="jelly_bean"/>

    <com.example.adiputra.sewainbali.EditTextWithClear
        android:id="@+id/et_new_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="New Password"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:padding="15dp"
        android:fontFamily="@font/roboto_regular"
        android:inputType="textPassword"
        android:maxLines="1"
        android:background="@drawable/et_login_custom"
        android:textSize="15sp"
        tools:targetApi="jelly_bean" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:text="Re-type New Password"
        android:fontFamily="@font/roboto_regular"
        tools:targetApi="jelly_bean"/>

    <com.example.adiputra.sewainbali.EditTextWithClear
        android:id="@+id/et_re_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Re-type New Password"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:padding="15dp"
        android:fontFamily="@font/roboto_regular"
        android:inputType="textPassword"
        android:maxLines="1"
        android:background="@drawable/et_login_custom"
        android:textSize="15sp"
        tools:targetApi="jelly_bean" />

    <Button
        android:id="@+id/btn_save_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_login_custom"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:textSize="13sp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@android:color/white"
        android:text="Reset Password"
        android:onClick="savePassword"
        tools:targetApi="jelly_bean" />

</LinearLayout>